<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:menu.file?after=menu.file.delete">
         <separator
               name="com.iai.proteus.linux.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.window.preferences"
               label="Preferences"
               style="push">
         </command>
         <separator
               name="com.iai.proteus.linux.separator2"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.file.exit"
               label="Exit"
               mnemonic="Q"
               style="push">
            <visibleWhen
                  checkEnabled="false">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:menu.help?after=menu.help.release_notes">
         <separator
               name="com.iai.proteus.linux.separator3"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.help.aboutAction"
               label="About"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.file.exit"
            contextId="org.eclipse.ui.contexts.window"
            platform="linux"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+Q">
      </key>
   </extension>

</fragment>
